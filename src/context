  ```yaml  
  name: Generate Docs  
  on: [push]  
  jobs:  
    build:  
      runs-on: ubuntu-latest  
      steps:  
        - uses: actions/checkout@v3  
        - name: Install Dependencies  
          run: pip install sphinx matplotlib  
        - name: Generate Docs  
          run: sphinx-build -b html ./docs/source ./docs/build  
        - name: Deploy Docs  
